<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    >
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/device_back"
        android:scaleType="centerInside"
        />
    <RelativeLayout
        android:id="@+id/rl_item2"
        android:layout_alignLeft="@+id/img_back"
        android:layout_alignRight="@+id/img_back"
        android:layout_alignTop="@+id/img_back"
        android:layout_alignBottom="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_device_choice"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/img_device_unchoice"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            />
        <ImageView
            android:id="@+id/img_lamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lamp_close"
            android:scaleType="centerInside"
            android:layout_above="@+id/tv_name"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="萧山别墅"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:layout_above="@+id/tv_imei"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            />
    </RelativeLayout>
    <View
        android:layout_alignTop="@+id/rl_item2"
        android:id="@+id/view"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_105"
        />
    <View
        android:layout_alignTop="@+id/rl_item2"
        android:id="@+id/view2"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/green2"
        />
    <View
        android:layout_alignBottom="@+id/rl_item2"
        android:id="@+id/view3"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_4"/>
</RelativeLayout>