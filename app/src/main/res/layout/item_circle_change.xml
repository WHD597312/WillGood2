<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    >

    <ImageView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/img_line"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_circle4"
        />
    <TextView
        android:id="@+id/tv_line_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/sp_18"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/img_line"
        android:layout_alignRight="@id/img_line"
        android:layout_alignTop="@id/img_line"
        android:layout_alignBottom="@id/img_line"
        />
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1è·¯"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_below="@+id/img_line"
        android:layout_alignLeft="@+id/img_line"
        android:layout_alignRight="@id/img_line"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_17"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_line"
        android:layout_alignTop="@+id/img_line"
        android:layout_alignBottom="@+id/tv_line"
        />
</RelativeLayout>