<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/dp_20"
    >
    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_20"
    >
    <ImageView
        android:id="@+id/img_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/position"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/img_start"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_20"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_start"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@+id/rl_start"
        >
        <ImageView
            android:id="@+id/img_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/position"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/img_end"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_20"
            />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_end"
        android:layout_alignLeft="@+id/rl_start"
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4b4b4b"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_25"

        />
    <TextView
        android:id="@+id/tv_mi"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        android:textColor="#4b4b4b"
        android:layout_alignBottom="@+id/tv_distance"
        android:layout_toRightOf="@+id/tv_distance"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_3"
        />
    <TextView
        android:id="@+id/tv_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动距离"
        android:layout_below="@+id/tv_distance"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_alignLeft="@+id/rl_start"
        />
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-1-24 13:22"
        android:layout_below="@+id/tv_move"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_alignLeft="@+id/rl_start"
        android:layout_marginBottom="@dimen/dp_20"
        />

</RelativeLayout>