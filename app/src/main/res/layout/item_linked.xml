<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/img_linked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/img_linked_temp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_linked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_linked"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="温度联动"
            android:textSize="@dimen/sp_18"
            android:textColor="#4b4b4b"
            />

        <ImageView
            android:id="@+id/img_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/img_close"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/base_back"
        android:layout_below="@+id/rl_head"
        android:layout_alignLeft="@+id/rl_head"
        android:layout_alignRight="@+id/rl_head"
        />
</RelativeLayout>