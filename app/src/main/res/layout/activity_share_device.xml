<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device.ShareDeviceActivity"
    android:fitsSystemWindows="true"
    android:background="@color/base_back"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:scaleType="centerInside"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignBottom="@id/img_back"
            android:gravity="center"
            android:text="分享设备"
            android:textColor="#4b4b4b"
            android:textSize="@dimen/sp_20"/>
        <TextView
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:background="@color/base_back"
            android:paddingLeft="@dimen/dp_12"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear_body"
        android:layout_below="@+id/rl_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_share"
        android:layout_marginTop="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="   定时控制   "
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_linked"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="    联动控制    "
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_switch_check"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="开关量测量"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/linear_2"
            android:layout_below="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_alerm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="  报警设置  "
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="  地图定位  "
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_moni_check"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:text="控制设备"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_fill5_gray"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_inter_lock"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="  模拟量测量  "
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/bg_fill5_gray"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_below="@+id/linear_2"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_share"
        android:layout_width="@dimen/dp_223"
        android:layout_height="@dimen/dp_43"
        android:text="分享"
        android:layout_below="@+id/linear_body"
        android:textColor="@color/base_back"
        android:background="@drawable/shape_add_device"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_16"
        />
</RelativeLayout>