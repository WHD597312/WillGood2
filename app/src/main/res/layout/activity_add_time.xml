<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/base_back"
    tools:context=".device.menu.AddTimeActivity">

    <!--<View-->
        <!--android:id="@+id/view_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_25"-->
        <!--android:background="#ffffff" />-->

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/img_cancel"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="定时控制"
            android:textColor="#4b4b4b"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/img_ensure"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_head"
        android:id="@+id/rl_timer_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/tv_timer_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="选择定时"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_timer_single"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:text="单次定时"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/base_back"
            android:background="@drawable/shape_loop"
            android:layout_toLeftOf="@+id/tv_timer_loop"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_timer_loop"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:text="循环定时"
            android:textSize="@dimen/sp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_timer_perform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行时间"
        android:layout_below="@+id/rl_timer_way"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_below="@+id/tv_timer_perform"
        android:id="@+id/rl_timer_perform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_timer_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设定时间"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/tv_timer_value"
            />
        <TextView
            android:id="@+id/tv_timer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-02-23 08:08"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_timer_set"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            />
    </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_below="@+id/rl_timer_perform"
            android:id="@+id/tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="重复"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_week"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_repeat"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="一"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="二"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="三"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="四"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="五"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="六"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
            <TextView
                android:id="@+id/tv_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="日"
                android:gravity="center"
                android:background="@drawable/shape_week_gray"
                android:textColor="@color/gray2"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_week"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:text="线路"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/white"
            />
        <GridView
            android:id="@+id/grid_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="4"
            android:verticalSpacing="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:layout_below="@+id/grid_line"
            android:id="@+id/tv_control_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="控制状态"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/base_back"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_control_state"
            android:id="@+id/btn_control_open"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_30"
            android:text="打开"
            android:textColor="@color/base_back"
            android:gravity="center"
            android:background="@drawable/shape_once"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/btn_control_close"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_30"
            android:text="关闭"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignTop="@+id/btn_control_open"
            android:layout_toRightOf="@+id/btn_control_open"
            android:layout_marginLeft="@dimen/dp_10"
            />
</RelativeLayout>