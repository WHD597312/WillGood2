<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    >

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        android:layout_centerInParent="true"
        android:background="@mipmap/app_update2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_110"
            android:gravity="center"
            android:text="主人有新的版本问世了"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_create"
            android:gravity="center"
            android:text="快更新我吧!"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="发布版本：V5.9.5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="发布时间:2019-4-25" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/app_update_cancel"
                android:gravity="center"
                android:text="取 消"
                android:textSize="16sp"
                android:layout_alignRight="@+id/view"
                android:layout_marginRight="@dimen/dp_15"
                />
            <View
                android:id="@+id/view"
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:id="@+id/button_ensure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/app_update_ensure"
                android:gravity="center"
                android:text="确 定"
                android:textColor="@color/color_orange"
                android:textSize="16sp"
                android:layout_alignLeft="@+id/view"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>