<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_body4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <SurfaceView
                android:id="@+id/preview_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
            <com.peihou.willgood2.utils.view.ViewfinderView
                android:id="@+id/viewfinder_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/head_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_back"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加设备"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/img_book"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_book"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@+id/head_title"
            android:id="@+id/rl_body3"
            android:background="@color/base_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_wifi"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:text="WiFi添加"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#09c585"
                    />
                <TextView
                    android:id="@+id/tv_gprs"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:text="GPRS添加"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_below="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f5f5f5"
                />
            <RelativeLayout
                android:id="@+id/rl_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                >
                <TextView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="■"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_10"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/tv_gprs1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_1"
                    android:layout_centerVertical="true"
                    android:text="输入要连接的无线网络,同时为了设备安全,防止他人恶意添加，请输入初始码"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/rl_body"
                android:hint="WiFi扫描中"
                android:background="#f7f7fa"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:inputType="textVisiblePassword"
                android:textSize="@dimen/sp_16"
                android:textColor="#646464"
                />
            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/et_name"
                android:hint="请输入WiFi密码"
                android:background="#f7f7fa"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignLeft="@+id/et_name"
                android:layout_alignRight="@+id/et_name"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:inputType="textVisiblePassword"
                android:textColor="#646464"
                />
            <EditText
                android:id="@+id/et_orignal_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/et_pswd"
                android:hint="请输入初始码"
                android:background="#f7f7fa"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignLeft="@+id/et_name"
                android:layout_alignRight="@+id/et_name"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:inputType="textVisiblePassword"
                android:textColor="#646464"
                />
            <Button
                android:id="@+id/bt_add_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_below="@+id/et_name"
                android:layout_marginTop="@dimen/dp_120"
                android:background="@drawable/shape_add_device"
                android:text="添加"
                android:textColor="@color/base_back"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
