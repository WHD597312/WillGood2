<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_linked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="湿度"
            android:textColor="#303030"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低于  10    开"
            android:textColor="#08c585"
            android:layout_toRightOf="@+id/tv_linked"
            android:layout_alignBottom="@+id/tv_linked"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tv_lines"
            android:layout_below="@+id/tv_linked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线路1 线路2 线路3"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toLeftOf="@+id/img_open"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_10"
            />

        <ImageView
            android:id="@+id/img_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@mipmap/img_close"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F7F7F7"
        android:layout_below="@+id/rl_head"
        android:layout_alignLeft="@+id/rl_head"
        android:layout_alignRight="@+id/rl_head"
        />

</RelativeLayout>