<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_timer"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:id="@+id/img_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/timer_close"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_30"
            />
        <TextView
            android:id="@+id/tv_timers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单次定时"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_5"
            />
        <RelativeLayout
            android:id="@+id/rl_head2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_timer"
            android:layout_marginBottom="@dimen/dp_15"
            >
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6C6C6C"
                android:text="00:00"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="线路"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_14"
                android:layout_below="@+id/tv_timer"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toLeftOf="@+id/img_open"
                android:layout_marginRight="@dimen/dp_10"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/img_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_close"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_40"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head2"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="一        二        三        四        五        六        七"
            android:gravity="center_vertical"
            android:layout_alignLeft="@+id/rl_head2"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/base_back"
        android:layout_below="@+id/rl_head"
        />
</RelativeLayout>