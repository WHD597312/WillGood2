<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RS485Activity"
    android:background="@color/base_back"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/img_back"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="RS485接口"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/rl_head"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_485_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:text="10进制"
            android:background="@drawable/shape_once"
            android:textColor="@color/base_back"
            />
        <Button
            android:id="@+id/btn_485_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:text="2进制"
            android:textColor="@color/color_blue"
            android:layout_toRightOf="@+id/btn_485_10"
            android:background="@drawable/shape_once"
            android:layout_marginLeft="@dimen/dp_5"

            />
        <Button
            android:id="@+id/btn_485_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_40"
            android:text="16进制"
            android:textColor="@color/color_blue"
            android:layout_toRightOf="@+id/btn_485_2"
            android:background="@drawable/shape_once"

            />
        <Button
            android:id="@+id/btn_485_ASCII"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_40"
            android:text="ASCII"
            android:textColor="@color/color_blue"
            android:layout_toRightOf="@+id/btn_485_16"
            android:background="@drawable/shape_once"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_rs485"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_item"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white"
        />

</RelativeLayout>