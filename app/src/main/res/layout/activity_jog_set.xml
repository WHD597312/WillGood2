<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device.menu.JogSetActivity"
    android:background="@color/base_back"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:scaleType="centerInside"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignBottom="@id/img_back"
            android:gravity="center"
            android:text="点动设置"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_default_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:text="默认时间"
        android:layout_below="@+id/rl_head"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/rl_body"
        android:layout_below="@+id/tv_default_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:orientation = "horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_gravity="center"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation = "horizontal"
            android:id="@+id/linear_1"
            android:layout_marginLeft="@dimen/dp_23"

            >
            <CheckBox
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_round"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@null"
                android:checked="true"
                />
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1s"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation = "horizontal"

            >
            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_1"
                android:background="@drawable/selector_round"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2s"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation = "horizontal"
            android:id="@+id/linear_3"
            >
            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_round"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@null"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb3"
                android:text="3s"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation = "horizontal"
            >
            <CheckBox
                android:id="@+id/cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_round"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@null"
                />
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb4"
                android:text="5s"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation = "horizontal"
            >
            <CheckBox
                android:id="@+id/cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_round"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:button="@null"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cb5"
                android:text="10s"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义"
        android:layout_below="@+id/rl_body"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_below="@id/tv_auto"
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/tv_jog_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点动时间自定义"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/base_back"
            />
        <TextView
            android:id="@+id/tv_jog_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_auto"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text=""
            />
        <ImageView
            android:id="@+id/img_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_right_arrow"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
    <Button
        android:layout_below="@+id/rl_bottom"
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_btn_green"
        android:text="提交"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/base_back"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_100"
        />
</RelativeLayout>