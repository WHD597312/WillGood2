<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device.DeviceListActivity"
    android:background="@color/base_back"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/img_exit"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/share"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_exit"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备列表"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_18"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/search"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <GridView
        android:layout_below="@+id/rl_head"
        android:id="@+id/grid_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:numColumns="3"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:horizontalSpacing="@dimen/dp_15"
        android:listSelector="@android:color/transparent"
        android:layout_above="@+id/img_all_close"
        />
    <ImageView
        android:id="@+id/img_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add_device"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/img_all_close"
        android:scaleType="centerInside"
        android:layout_marginBottom="@dimen/dp_60"
        />
    <ImageView
        android:id="@+id/img_all_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_all_close3"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_50"
        />
    <TextView
        android:id="@+id/tv_all_close2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全关"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/img_all_close"
        android:layout_alignLeft="@+id/img_all_close"
        android:layout_alignRight="@+id/img_all_close"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        />
    <ImageView
        android:id="@+id/img_all_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_all_open3"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        />
    <TextView
        android:id="@+id/tv_all_open2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全开"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/img_all_open"
        android:layout_alignLeft="@+id/img_all_open"
        android:layout_alignRight="@+id/img_all_open"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        />
</RelativeLayout>