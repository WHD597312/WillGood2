<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_180"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/shape_dialog"
    >
    <ImageView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/img_alerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_dialog_alerm"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温度报警"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="#4b4b4b"
        android:layout_below="@+id/img_alerm"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温度报警，请注意！"
        android:gravity="center"
        android:textColor="#939393"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_5"
        />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d8dbd5"
        android:layout_above="@+id/linear"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="#797979"
            />
        <TextView
            android:id="@+id/btn_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textColor="#09c585"
            />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:background="#d8dbd5"
        android:layout_alignBottom="@+id/linear"
        android:layout_alignTop="@+id/linear"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>